<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="102dp"
            android:src="@drawable/mat_cuoi" />

        <TextView
            android:id="@+id/title_ten"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Chúc mừng bạn. Bạn là 1 trong 10 cao thủ có số điểm cao nhất."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_diem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/title_ten"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/title_diem"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm số: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diem"
                style="@style/ButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ef4444" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/choilai"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red"
                android:padding="8dp"
                android:text="Chơi lại" />

            <Button
                android:id="@+id/luu"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red"
                android:padding="8dp"
                android:text="Lưu điểm" />

            <Button
                android:id="@+id/xem_diem_cao"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red"
                android:padding="8dp"
                android:text="Điểm cao"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/menu"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red"
                android:padding="8dp"
                android:paddingBottom="50dp"
                android:text="Main Menu" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>